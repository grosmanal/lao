<li class="{{ html_classes('comment', { 'opacity-0': commentHidden ?? false } ) }}">
    {#% include "patient/parts/care_request_comment_menu.html.twig" %#}
    <article class="d-flex border border-2">
        <div class="flex-shrink-0 {{ app.user.id == comment.author.id ? 'order-0' : 'order-1' }}">
            <img src="https://via.placeholder.com/100" alt="{{ comment.author.firstname }}">
        </div>
        <div class="flex-grow-1 ms-3 p-2 comment-body">
            <div class="mb-2">
                <time class="fw-lighter" datetime="{{ comment.creationDate|date('c') }}" title="{{ comment.creationDate|format_datetime('medium', 'short') }}">
                    {{ comment.getCreationDateNonImmutable|ago() }}
                </time>
                {% if comment.modificationDate %}
                <span class="fw-lighter">
                    &nbsp; (
                    {{ 'Edited'|trans }}
                    <time datetime="{{ comment.modificationDate|date('c') }}" title="{{ comment.modificationDate|format_datetime('medium', 'short') }}">
                        {{ comment.getModificationDateNonImmutable|ago() }}
                    </time>
                    )
                </span>
                {% endif %}

                {% if app.user.id == comment.author.id and comment.careRequest.active %}
                <span class="float-end">
                    <div class="dropdown">
                        <form action="#" onsubmit="submitCommentMenu(event)">
                            <input type="hidden" name="url-api-delete" value="{{ url('api_comments_delete_item', {id: comment.id}) }}">
                            <input type="hidden" name="url-get-form" value="{{ url('comment_form', {id: comment.id}) }}">

                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots"></i>
                            </button>

                            <ul class="dropdown-menu">
                                <li class="dropdown-item">
                                    <button type="submit" name="edit" class="btn btn-link ps-0 text-primary text-decoration-none">
                                        <i class="bi bi-pencil-square"></i> {{ 'comment.edit'|trans }}
                                    </button>
                                </li>
                                <li class="dropdown-item">
                                    <button type="submit" name="delete" class="btn btn-link ps-0 text-danger text-decoration-none">
                                        <i class="bi bi-trash"></i>{{ 'comment.delete'|trans }}
                                    </button>
                                </li>
                            </ul>
                        </form>
                    </div>
                </span>
                {% endif %}

            </div>

            <p>
                {{ comment.content|raw }}
            </p>
        </div>
    </article>
</li>


