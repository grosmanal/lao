{{ form_start(commentForm, {attr: {
    class: 'comment-form clearfix',
    onsubmit: 'submitComment(event)',
}}) }}
    {{ form_widget(commentForm.content) }}
    
    {% if commentForm.cancel is defined %}
        {{ form_widget(commentForm.cancel, {attr: {
            class: 'btn btn-primary btn-sm float-end mt-2 ms-1'
        }}) }}
    {% endif %}
    
    {{ form_widget(commentForm.upsert, {attr: {
        class: 'btn btn-primary btn-sm float-end mt-2'
    }}) }}
{{ form_end(commentForm) }}