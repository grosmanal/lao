{{ form_start(careRequestForm, {
    'attr': {'onsubmit': 'submitCareRequest(event)'}
}) }}

    <div class="form-content">
        <div class="form-group row">
            <div class="col-12 col-lg-4">
                {{ form_label(careRequestForm.contactedBy) }}
            </div>
            <div class="col-12 col-lg-8">
                {{ form_widget(careRequestForm.contactedBy) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12 col-lg-4">
                {{ form_label(careRequestForm.contactedAt) }}
            </div>
            <div class="col-12 col-lg-8">
                {{ form_widget(careRequestForm.contactedAt) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12 col-lg-4">
                {{ form_label(careRequestForm.complaint) }}
            </div>
            <div class="col-12 col-lg-8">
                {{ form_widget(careRequestForm.complaint) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12 col-lg-4">
                {{ form_label(careRequestForm.customComplaint) }}
            </div>
            <div class="col-12 col-lg-8">
                {{ form_widget(careRequestForm.customComplaint) }}
            </div>
        </div>

        <div class="form-group row text-start">
            <div class="col-12 col-lg-4">
            </div>
            <div class="col-12 col-lg-8">
                {{ form_widget(careRequestForm.priority) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12 col-lg-4">
                {{ form_label(careRequestForm.acceptedBy) }}
            </div>
            <div class="col-12 col-lg-8">
                {{ form_widget(careRequestForm.acceptedBy) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12 col-lg-4">
                {{ form_label(careRequestForm.acceptedAt) }}
            </div>
            <div class="col-12 col-lg-8 text-start">
                <span class="d-inline-block" style="max-width: 150px;">
                    {{ form_widget(careRequestForm.acceptedAt) }}
                </span>
                {{ form_widget(careRequestForm.accept) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12 col-lg-4">
                {{ form_label(careRequestForm.abandonedReason) }}
            </div>
            <div class="col-12 col-lg-8">
                {{ form_widget(careRequestForm.abandonedReason) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12 col-lg-4">
                {{ form_label(careRequestForm.abandonedAt) }}
            </div>
            <div class="col-12 col-lg-8 text-start">
                <span class="d-inline-block" style="max-width: 150px;">
                    {{ form_widget(careRequestForm.abandonedAt) }}
                </span>
                {{ form_widget(careRequestForm.abandon) }}
            </div>
        </div>

        <div class="form-group row d-none d-lg-block">
            &nbsp; {# pour avoir un colonne en face demande prioritaire #}
        </div>
    </div>

    <div class="form-group row submit-form-group">
        <div class="col-4"></div>
        <div class="col-4 text-center">
            {% if careRequestForm.upsert is defined %}
                {{ form_widget(careRequestForm.upsert) }}
            {% endif %}
            {% if careRequestForm.reactivate is defined %}
                {{ form_widget(careRequestForm.reactivate) }}
            {% endif %}
        </div>
        <div class="col-4">
            {% if careRequestForm.delete is defined %}
                {{ form_widget(careRequestForm.delete, {
                    label_translation_parameters: {'%icon%': '<i class="bi bi-trash"></i>'},
                }) }}
            {% endif %}
        </div>
    </div>

{{ form_end(careRequestForm) }}